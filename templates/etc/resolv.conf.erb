### File managed with puppet ###
## Filename:         '/etc/resolv.conf'
## Served by:        '<%= scope.lookupvar('::servername') %>'
## Environment:      '<%= scope.lookupvar('::environment') %>'
## Module:           '<%= scope.to_hash['module_name'] %>'
## Template source:  'modules<%= template_source.gsub(Regexp.new("^#{Puppet::Node::Environment.current[:modulepath].gsub(':','|')}"),"") %>'

<% if @searchpath.empty? %>domain <%= @domainname %>
<% end -%>
<% if !@searchpath.empty? %>search <%= if @searchpath.kind_of?(Array) then @searchpath.join(" ") else @searchpath end %>
<% end -%>
<% @nameservers.each do |ns| %>nameserver <%= ns %>
<% end -%>
<% if !@options.empty? %>options <%= @options.join(" ") %>
<% end -%>
